{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug client-side (Firefox)",
      "type": "firefox",
      "request": "launch",
      "firefoxExecutable": "/usr/bin/flatpak",
      "firefoxArgs": ["run", "org.mozilla.firefox",
        //"-no-remote",
        "-P", "debug-profile",
        "--start-debugger-server"],
      "port": 6000,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "tmpDir": "${workspaceFolder}/.tmp",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "next.js Attach (Firefox)",
      "type": "firefox",
      "request": "attach",
      "port": 6000,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "reloadOnAttach": true,
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      }
    }
  ]
}